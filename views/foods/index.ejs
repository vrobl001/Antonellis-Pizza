<div class="app-outer-container">
  <%- include('../partials/header') %>
  <div class="app-inner-container">
    <h2>Foods Index</h2>
    <table class="table table-hover">
      <thead class="thead-dark">
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Description</th>
        <th><a href="foods/new">Add New Food</a></th>
        <th></th>
      </thead>
      <tbody>
        <% foods.forEach(food => { %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.category %></td>
          <td><%= food.price %></td>
          <td><%= food.description %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <%- include('../partials/footer') %>
</div>
